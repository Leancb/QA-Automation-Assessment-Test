{
    "name": "mobile-tests",
    "version": "1.0.0",
    "description": "WDIO + Appium mobile automation",
    "main": "index.js",
    "type": "commonjs",
    "scripts": {
        "test": "cross-env NODE_OPTIONS= wdio run wdio.conf.ts",
        "test:e2e": "wdio run wdio.conf.ts",
        "test:all": "wdio run wdio.conf.ts",
        "test:android": "cross-env NODE_OPTIONS= wdio run wdio.conf.ts",
        "test:login": "cross-env NODE_OPTIONS= wdio run wdio.conf.ts --spec ./test/specs/login.e2e.js",
        "test:form": "cross-env NODE_OPTIONS= wdio run wdio.conf.ts --spec ./test/specs/forms.e2e.js",

        "driver:uia2": "appium driver install uiautomator2",

        "report:clean": "rimraf reports/allure/raw reports/allure/html",
        "report:gen": "allure generate reports/allure/raw --clean -o reports/allure/html",
        "report:open": "allure open reports/allure/html",

        "test:allure": "npm run report:clean && npm run test:all && npm run report:gen && npm run report:open"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@wdio/allure-reporter": "^9.19.1",
        "@wdio/appium-service": "^9.19.1",
        "@wdio/cli": "^9.19.1",
        "@wdio/local-runner": "^9.19.1",
        "@wdio/mocha-framework": "^9.19.1",
        "@wdio/spec-reporter": "^9.19.1",
        "@wdio/visual-service": "^9.0.0",
        "allure-commandline": "^2.34.1",
        "appium": "^2.19.0",
        "appium-uiautomator2-driver": "^4.2.8",
        "cross-env": "^10.0.0",
        "expect-webdriverio": "^5.4.1",
        "rimraf": "^6.0.1",
        "webdriverio": "^9.19.1"
    }
}
